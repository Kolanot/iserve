<?xml version="1.0" encoding="UTF-8"?>
<definitions name="PDBLigand"
   targetNamespace="http://cheminfo.informatics.indiana.edu/PDBLigand"
   xmlns="http://schemas.xmlsoap.org/wsdl/"
   xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
   xmlns:tns="http://cheminfo.informatics.indiana.edu/PDBLigand"
   xmlns:xsd="http://www.w3.org/2001/XMLSchema">

   <message name="pdbligandRequest">
      <part name="pdbcode" type="xsd:string"/>			
   </message>
   <message name="pdbligandResponse">
      <part name="ligandsmiles" type="xsd:string"/>
   </message>

   <portType name="pdbligand_PortType">
      <operation name="pdbligandsmiles">
         <input message="tns:pdbligandRequest"/>
         <output message="tns:pdbligandResponse"/>
      </operation>
   </portType>
   
   <binding name="pdbligand_Binding" type="tns:pdbligand_PortType">
      <soap:binding style="rpc" 
         transport="http://schemas.xmlsoap.org/soap/http"/>
      <operation name="pdbligandsmiles">
         <soap:operation soapAction="http://cheminfo.informatics.indiana.edu/PDBLigand#pdbligandsmiles"/>
         <input>
            <soap:body 
               encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
               namespace="http://cheminfo.informatics.indiana.edu/PDBLigand"
               use="encoded"/>
         </input>
         <output>
            <soap:body
               encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
               namespace="http://cheminfo.informatics.indiana.edu/PDBLigand"
               use="encoded"/>
         </output>
      </operation>
   </binding>

   <service name="pdbligand_Service">
      <documentation>This is PDB Ligand component</documentation>
      <port binding="tns:pdbligand_Binding" name="pdbligand_Port">
         <soap:address 
            location="http://cheminfo.informatics.indiana.edu/cicc/cgi-bin/pdbligand.cgi"/>
      </port>
   </service>
</definitions>
